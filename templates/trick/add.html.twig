{% block body %}
    <div class="container">
        <h1>Ajouter un nouveau trick
            <span style="font-size: 0.5em;">Vas-y, sois pas timide !</span>
        </h1>
        {{ form_start(trickForm) }}

        <div class="my-custom-class-for-errors">
            {{ form_errors(trickForm) }}
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(trickForm.name) }}
            </div>
            <div class="col-md-6">
                {{ form_row(trickForm.trickCategory) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(trickForm.content) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(trickForm.image) }}
            </div>
            <div class="col-md-6">
                {{ form_row(trickForm.video) }}
            </div>
        </div>
        <div class="col-md-12">
            <button id="button-send-trick" type="submit" class="btn btn-success">Cr√©er la figure !</button>
        </div>

        {{ form_end(trickForm) }}
    </div>
{% endblock %}
