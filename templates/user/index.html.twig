{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}

	<div class="container">
		<h1>Bonjour
			<b>{{ app.user.username }}</b>
			!</h1>

		<div>
			<h2>Votre avatar</h2>
			<img src="{{asset('images/avatar/')~app.user.avatar}}" style="object-fit: cover;" width="256" height="256" class="rounded-circle" alt="">
		</div>

		<div class="mt-5">
		<h2>Changer d'avatar</h2>
			{{ form_start(form) }}
			{{ form_widget(form.avatarFile) }}
			<button type="submit" class="btn btn-primary mt-2">Envoyer</button>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
