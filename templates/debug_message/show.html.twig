{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ message.id }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ message.content }}</td>
        </tr>
        <tr>
            <th>PublicationDate</th>
            <td>{{ message.publicationDate ? message.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_debug_message_index') }}">back to list</a>

    <a href="{{ path('app_debug_message_edit', {'id': message.id}) }}">edit</a>

    {{ include('debug_message/_delete_form.html.twig') }}
{% endblock %}
